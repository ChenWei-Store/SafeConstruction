<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/vertical_margin_8"
    android:layout_marginStart="@dimen/horizontal_margin_16"
    android:layout_marginEnd="@dimen/horizontal_margin_16"
    android:paddingStart="@dimen/horizontal_margin_8"
    android:paddingEnd="@dimen/horizontal_margin_8"
    android:paddingTop="@dimen/vertical_margin_8"
    android:paddingBottom="@dimen/vertical_margin_8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_8_fff_bg"
   >
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/main_color"
        tools:text="2021-12-07"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_time"
        android:paddingStart="@dimen/horizontal_margin_12"
        android:paddingEnd="@dimen/horizontal_margin_12"
        android:paddingTop="@dimen/vertical_margin_4"
        android:paddingBottom="@dimen/vertical_margin_4"
        android:background="@drawable/common_16_13c47f_bg"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/c_fff"
        tools:text="已处理"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        android:layout_marginTop="@dimen/vertical_margin_12"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_222"
        tools:text="问题描述：12345"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/horizontal_margin_12"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/tv_commit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line"
        android:layout_marginTop="@dimen/vertical_margin_8"
        android:textColor="@color/c_999"
        android:textSize="@dimen/sp_12"
        tools:text="提交人：12345"/>

</androidx.constraintlayout.widget.ConstraintLayout>
