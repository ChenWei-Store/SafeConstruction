<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/vertical_margin_20">
    <View
        android:id="@+id/view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true" />
    <RelativeLayout
        android:id="@+id/view_left"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_toStartOf="@id/view"
        android:layout_marginEnd="@dimen/horizontal_margin_8"
        android:background="@drawable/circle_white">
        <ImageView
            android:id="@id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/vertical_margin_8"
            android:src="@drawable/standard"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/vertical_margin_8"
            android:text="规范"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_555"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/view_right"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_toEndOf="@id/view"
        android:layout_marginStart="@dimen/horizontal_margin_8"
        android:background="@drawable/circle_white">
        <ImageView
            android:id="@id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/vertical_margin_8"
            android:src="@drawable/not_standard"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/vertical_margin_8"
            android:text="不规范"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_555"/>
    </RelativeLayout>



</RelativeLayout>
