<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
 <com.shuangning.safeconstruction.base.widget.TitleView
     android:id="@+id/view_title"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent" />
 <View
     android:id="@+id/view1"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/view_title"/>

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="@dimen/horizontal_margin_16"
     app:layout_constraintStart_toStartOf="@id/view1"
     app:layout_constraintTop_toTopOf="@id/view1"
     app:layout_constraintBottom_toBottomOf="@id/view1"
     android:text="班组"
     android:textSize="@dimen/sp_14"
     android:textColor="@color/c_222"/>
 <TextView
     android:id="@+id/tv_class"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="100dp"
     android:layout_marginEnd="@dimen/horizontal_margin_16"
     app:layout_constraintStart_toStartOf="@id/view1"
     app:layout_constraintTop_toTopOf="@id/view1"
     app:layout_constraintBottom_toBottomOf="@id/view1"
     android:maxLines="1"
     android:ellipsize="end"
     android:text="请选择班组"
     android:textSize="@dimen/sp_14"
     android:textColor="@color/c_555"/>
 <View
     android:id="@+id/view_divider"
     android:layout_width="match_parent"
     android:layout_height="1dp"
     android:background="@color/divider"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/view1"/>

 <View
     android:id="@+id/view2"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/view_divider"/>

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="@dimen/horizontal_margin_16"
     app:layout_constraintStart_toStartOf="@id/view2"
     app:layout_constraintTop_toTopOf="@id/view2"
     app:layout_constraintBottom_toBottomOf="@id/view2"
     android:text="记录编号"
     android:textSize="@dimen/sp_14"
     android:textColor="@color/c_222"/>
 <TextView
     android:id="@+id/tv_number"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="100dp"
     android:layout_marginEnd="@dimen/horizontal_margin_16"
     app:layout_constraintStart_toStartOf="@id/view2"
     app:layout_constraintTop_toTopOf="@id/view2"
     app:layout_constraintBottom_toBottomOf="@id/view2"
     android:maxLines="1"
     android:ellipsize="end"
     android:textSize="@dimen/sp_14"
     android:textColor="@color/c_222"/>
 <View
     android:id="@+id/view_divider2"
     android:layout_width="match_parent"
     android:layout_height="1dp"
     android:background="@color/divider"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/view2"/>

 <View
     android:id="@+id/view3"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/view_divider2"/>

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="@dimen/horizontal_margin_16"
     app:layout_constraintStart_toStartOf="@id/view3"
     app:layout_constraintTop_toTopOf="@id/view3"
     app:layout_constraintBottom_toBottomOf="@id/view3"
     android:text="班组长"
     android:textSize="@dimen/sp_14"
     android:textColor="@color/c_222"/>
 <TextView
     android:id="@+id/tv_class_leader"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="100dp"
     android:maxLines="1"
     android:ellipsize="end"
     android:layout_marginEnd="@dimen/horizontal_margin_16"
     app:layout_constraintStart_toStartOf="@id/view3"
     app:layout_constraintTop_toTopOf="@id/view3"
     app:layout_constraintBottom_toBottomOf="@id/view3"
     android:textSize="@dimen/sp_14"
     android:textColor="@color/c_222"/>
 <View
     android:id="@+id/view_divider3"
     android:layout_width="match_parent"
     android:layout_height="1dp"
     android:background="@color/divider"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/view3"/>

 <View
     android:id="@+id/view4"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/view_divider3"/>

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="@dimen/horizontal_margin_16"
     app:layout_constraintStart_toStartOf="@id/view4"
     app:layout_constraintTop_toTopOf="@id/view4"
     app:layout_constraintBottom_toBottomOf="@id/view4"
     android:text="参会人员"
     android:textSize="@dimen/sp_14"
     android:textColor="@color/c_222"/>
 <TextView
     android:id="@+id/tv_person"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="100dp"
     android:layout_marginEnd="@dimen/horizontal_margin_16"
     app:layout_constraintStart_toStartOf="@id/view4"
     app:layout_constraintTop_toTopOf="@id/view4"
     app:layout_constraintBottom_toBottomOf="@id/view4"
     android:textSize="@dimen/sp_14"
     android:textColor="@color/c_222"
     android:text="请选择"/>
 <View
     android:id="@+id/view_divider4"
     android:layout_width="match_parent"
     android:layout_height="1dp"
     android:background="@color/divider"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/view4"/>

 <View
     android:id="@+id/view5"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/view_divider4"/>

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="@dimen/horizontal_margin_16"
     app:layout_constraintStart_toStartOf="@id/view5"
     app:layout_constraintTop_toTopOf="@id/view5"
     app:layout_constraintBottom_toBottomOf="@id/view5"
     android:text="施工状态"
     android:textSize="@dimen/sp_14"
     android:textColor="@color/c_222"/>

 <com.shuangning.safeconstruction.base.widget.DrawableTextView
     android:id="@+id/tv_not_works"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="100dp"
     android:drawableLeft="@drawable/not_select"
     android:drawablePadding="@dimen/horizontal_margin_8"
     android:layout_marginEnd="@dimen/horizontal_margin_16"
     app:layout_constraintEnd_toEndOf="@id/view5"
     app:layout_constraintTop_toTopOf="@id/view5"
     app:layout_constraintBottom_toBottomOf="@id/view5"
     android:textSize="@dimen/sp_14"
     android:textColor="@color/c_222"
     android:text="未施工"/>

 <com.shuangning.safeconstruction.base.widget.DrawableTextView
     android:id="@+id/tv_works"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="100dp"
     android:drawableLeft="@drawable/selected"
     android:drawablePadding="@dimen/horizontal_margin_8"
     android:layout_marginEnd="@dimen/horizontal_margin_16"
     app:layout_constraintEnd_toStartOf="@id/tv_not_works"
     app:layout_constraintTop_toTopOf="@id/view5"
     app:layout_constraintBottom_toBottomOf="@id/view5"
     android:textSize="@dimen/sp_14"
     android:textColor="@color/c_222"
     android:text="施工"/>
 <View
     android:id="@+id/view_divider5"
     android:layout_width="match_parent"
     android:layout_height="1dp"
     android:background="@color/divider"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/view5"/>

 <View
     android:id="@+id/view6"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/view_divider5"/>

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="@dimen/horizontal_margin_16"
     app:layout_constraintStart_toStartOf="@id/view6"
     app:layout_constraintTop_toTopOf="@id/view6"
     app:layout_constraintBottom_toBottomOf="@id/view6"
     android:text="教育时间"
     android:textSize="@dimen/sp_14"
     android:textColor="@color/c_222"/>

 <com.shuangning.safeconstruction.base.widget.DrawableTextView
     android:id="@+id/tv_after_works"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:drawableLeft="@drawable/not_select"
     android:drawablePadding="@dimen/horizontal_margin_8"
     app:layout_constraintStart_toStartOf="@id/tv_not_works"
     app:layout_constraintTop_toTopOf="@id/view6"
     app:layout_constraintBottom_toBottomOf="@id/view6"
     android:textSize="@dimen/sp_14"
     android:textColor="@color/c_222"
     android:text="班后"/>

 <com.shuangning.safeconstruction.base.widget.DrawableTextView
     android:id="@+id/tv_preworks"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="100dp"
     android:drawableLeft="@drawable/selected"
     android:drawablePadding="@dimen/horizontal_margin_8"
     app:layout_constraintEnd_toEndOf="@id/tv_works"
     app:layout_constraintTop_toTopOf="@id/view6"
     app:layout_constraintBottom_toBottomOf="@id/view6"
     android:textSize="@dimen/sp_14"
     android:textColor="@color/c_222"
     android:text="班前"/>
 <View
     android:id="@+id/view_divider6"
     android:layout_width="match_parent"
     android:layout_height="1dp"
     android:background="@color/divider"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/view6"/>

 <ImageView
     android:id="@+id/iv_add"
     android:layout_width="80dp"
     android:layout_height="80dp"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/view_divider6"
     android:layout_marginTop="@dimen/horizontal_margin_16"
     android:layout_marginStart="@dimen/horizontal_margin_16"
     android:src="@drawable/add_photo"/>

 <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
     android:id="@+id/detail_player"
     android:layout_width="match_parent"
     android:layout_height="160dp"
     android:layout_marginTop="@dimen/horizontal_margin_16"
     android:layout_marginStart="@dimen/horizontal_margin_16"
     android:layout_marginEnd="@dimen/horizontal_margin_16"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/iv_add"
     android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>
