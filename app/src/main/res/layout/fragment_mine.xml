<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider">
    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/c_2B88CF"/>
    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_header"
        app:layout_constraintStart_toStartOf="@id/view_header"
        android:layout_marginStart="@dimen/horizontal_margin_16"
        android:layout_marginTop="@dimen/horizontal_margin_16"
        android:src="@drawable/header_icon" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_header"
        app:layout_constraintStart_toEndOf="@id/iv_header"
        android:layout_marginStart="@dimen/horizontal_margin_12"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/c_fff" />
    <TextView
        android:id="@+id/tv_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_header"
        app:layout_constraintStart_toEndOf="@id/iv_header"
        android:layout_marginStart="@dimen/horizontal_margin_12"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/c_fff" />

    <View
        android:id="@+id/view_modify_pwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/view_header"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/vertical_margin_20"
        android:background="@color/c_fff"/>

    <ImageView
        android:id="@+id/iv_modify_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/view_modify_pwd"
        app:layout_constraintTop_toTopOf="@id/view_modify_pwd"
        app:layout_constraintBottom_toBottomOf="@id/view_modify_pwd"
        android:src="@drawable/change_pwd_icon"
        android:layout_marginStart="@dimen/horizontal_margin_16" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_modify_pwd"
        app:layout_constraintBottom_toBottomOf="@id/view_modify_pwd"
        app:layout_constraintStart_toEndOf="@id/iv_modify_pwd"
        android:layout_marginStart="@dimen/horizontal_margin_8"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/c_000"
        android:text="@string/modify_pwd"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_margin_16"
        app:layout_constraintEnd_toEndOf="@id/view_modify_pwd"
        app:layout_constraintTop_toTopOf="@id/view_modify_pwd"
        app:layout_constraintBottom_toBottomOf="@id/view_modify_pwd"
        android:src="@drawable/right_arrow_icon"/>

    <View
        android:id="@+id/view_update_version"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/view_modify_pwd"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/vertical_margin_16"
        android:background="@color/c_fff"/>

    <ImageView
        android:id="@+id/iv_update_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/view_update_version"
        app:layout_constraintTop_toTopOf="@id/view_update_version"
        app:layout_constraintBottom_toBottomOf="@id/view_update_version"
        android:src="@drawable/update_version_icon"
        android:layout_marginStart="@dimen/horizontal_margin_16" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_update_version"
        app:layout_constraintBottom_toBottomOf="@id/view_update_version"
        app:layout_constraintStart_toEndOf="@id/iv_update_version"
        android:layout_marginStart="@dimen/horizontal_margin_8"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/c_000"
        android:text="@string/update_version"/>
    <ImageView
        android:id="@+id/iv_update_version_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_margin_16"
        app:layout_constraintEnd_toEndOf="@id/view_update_version"
        app:layout_constraintTop_toTopOf="@id/view_update_version"
        app:layout_constraintBottom_toBottomOf="@id/view_update_version"
        android:src="@drawable/right_arrow_icon"/>

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/iv_update_version_arrow"
        app:layout_constraintTop_toTopOf="@id/view_update_version"
        app:layout_constraintBottom_toBottomOf="@id/view_update_version"
        android:layout_marginEnd="@dimen/horizontal_margin_8"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/c_000" />

    <View
        android:id="@+id/view_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/view_update_version"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/vertical_margin_16"
        android:background="@color/c_fff"/>

    <ImageView
        android:id="@+id/iv_clear_cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/view_clear_cache"
        app:layout_constraintTop_toTopOf="@id/view_clear_cache"
        app:layout_constraintBottom_toBottomOf="@id/view_clear_cache"
        android:src="@drawable/clear_cache_icon"
        android:layout_marginStart="@dimen/horizontal_margin_16" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_clear_cache"
        app:layout_constraintBottom_toBottomOf="@id/view_clear_cache"
        app:layout_constraintStart_toEndOf="@id/iv_clear_cache"
        android:layout_marginStart="@dimen/horizontal_margin_8"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/c_000"
        android:text="@string/clear_cache"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_margin_16"
        app:layout_constraintEnd_toEndOf="@id/view_clear_cache"
        app:layout_constraintTop_toTopOf="@id/view_clear_cache"
        app:layout_constraintBottom_toBottomOf="@id/view_clear_cache"
        android:src="@drawable/right_arrow_icon"/>

    <Button
        android:id="@+id/btn_exit_login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_clear_cache"
        android:layout_marginTop="@dimen/vertical_margin_36"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/c_fff"
        android:text="@string/logout"
        android:background="@drawable/common_8_0a8de5_bg"/>
</androidx.constraintlayout.widget.ConstraintLayout>
