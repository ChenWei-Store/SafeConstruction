<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_fff">
        <com.shuangning.safeconstruction.base.widget.TitleView
            android:id="@+id/view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_problem_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/vertical_margin_8"
            android:layout_marginStart="@dimen/horizontal_margin_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_555" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_8"
            android:layout_marginStart="@dimen/horizontal_margin_8"
            android:layout_marginEnd="@dimen/horizontal_margin_8"
            app:layout_constraintTop_toBottomOf="@id/tv_problem_content"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_line0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="@dimen/vertical_margin_8"
            app:layout_constraintTop_toBottomOf="@id/rv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_number_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_line0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/vertical_margin_8"
            android:layout_marginStart="@dimen/horizontal_margin_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_555"
            android:text="内容编号"/>

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_number_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/horizontal_margin_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_555" />

        <View
            android:id="@+id/view_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="@dimen/vertical_margin_8"
            app:layout_constraintTop_toBottomOf="@id/tv_number_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_line1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/vertical_margin_8"
            android:layout_marginStart="@dimen/horizontal_margin_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_555"
            android:text="类型"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_type_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/horizontal_margin_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_555" />

        <View
            android:id="@+id/view_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="@dimen/vertical_margin_8"
            app:layout_constraintTop_toBottomOf="@id/tv_type_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_check_sort_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_line2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/vertical_margin_8"
            android:layout_marginStart="@dimen/horizontal_margin_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_555"
            android:text="@string/check_sort"/>

        <TextView
            android:id="@+id/tv_check_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_check_sort_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/horizontal_margin_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_555" />
        <View
            android:id="@+id/view_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="@dimen/vertical_margin_8"
            app:layout_constraintTop_toBottomOf="@id/tv_check_sort_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_check_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_line3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/vertical_margin_8"
            android:layout_marginStart="@dimen/horizontal_margin_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_555"
            android:text="@string/check_item"/>

        <TextView
            android:id="@+id/tv_check_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_check_item_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/horizontal_margin_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_555" />
        <View
            android:id="@+id/view_line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="@dimen/vertical_margin_8"
            app:layout_constraintTop_toBottomOf="@id/tv_check_item_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_reference_clause_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toBottomOf="@id/view_line4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_reference_clause"
            android:layout_marginEnd="@dimen/horizontal_margin_8"
            android:layout_marginTop="@dimen/vertical_margin_8"
            android:layout_marginStart="@dimen/horizontal_margin_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_555"
            android:text="@string/reference_clause"/>

        <TextView
            android:id="@+id/tv_reference_clause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="5"
            app:layout_constraintTop_toTopOf="@id/tv_reference_clause_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_reference_clause_title"
            android:layout_marginEnd="@dimen/horizontal_margin_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_555" />

        <View
            android:id="@+id/view_line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="@dimen/vertical_margin_8"
            app:layout_constraintTop_toBottomOf="@id/tv_reference_clause"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_part_of_tender_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_line5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/vertical_margin_8"
            android:layout_marginStart="@dimen/horizontal_margin_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_555"
            android:text="标段"/>

        <TextView
            android:id="@+id/tv_part_of_tender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_part_of_tender_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/horizontal_margin_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_ff3e3d" />
        <View
            android:id="@+id/view_line6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="@dimen/vertical_margin_8"
            app:layout_constraintTop_toBottomOf="@id/tv_part_of_tender_title"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_commit_person_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_line6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/vertical_margin_8"
            android:layout_marginStart="@dimen/horizontal_margin_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_555"
            android:text="提交人"/>

        <TextView
            android:id="@+id/tv_commit_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_commit_person_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/horizontal_margin_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_555" />
        <View
            android:id="@+id/view_line7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="@dimen/vertical_margin_8"
            app:layout_constraintTop_toBottomOf="@id/tv_commit_person_title"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

