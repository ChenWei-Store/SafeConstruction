<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_fff"
    android:layout_marginBottom="@dimen/vertical_margin_8">
    <View
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_line1"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/view_color"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/vertical_margin_10"
        android:layout_marginBottom="@dimen/vertical_margin_10"
        app:layout_constraintTop_toTopOf="@id/view_title"
        app:layout_constraintBottom_toBottomOf="@id/view_title"
        app:layout_constraintStart_toStartOf="@id/view_title"
        android:background="@color/c_ff3e3d"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_title"
        app:layout_constraintBottom_toBottomOf="@id/view_title"
        app:layout_constraintStart_toStartOf="@id/view_title"
        android:layout_marginStart="@dimen/horizontal_margin_16"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/c_222" />
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_ff3e3d"
        android:textSize="@dimen/sp_16"
        android:text="@string/to_be_rectified2"
        android:paddingTop="@dimen/vertical_margin_4"
        android:paddingBottom="@dimen/vertical_margin_4"
        android:paddingStart="@dimen/horizontal_margin_12"
        android:paddingEnd="@dimen/horizontal_margin_12"
        android:layout_marginEnd="@dimen/horizontal_margin_16"
        app:layout_constraintTop_toTopOf="@id/view_title"
        app:layout_constraintBottom_toBottomOf="@id/view_title"
        app:layout_constraintEnd_toEndOf="@id/view_title"
        android:background="@drawable/common_16_ffe7e3_bg"/>
    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_title"/>
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/vertical_margin_12"
        android:layout_marginStart="@dimen/horizontal_margin_8"
        app:layout_constraintTop_toBottomOf="@id/view_line1"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/test_round_bg"
         />
    <TextView
        android:id="@+id/tv_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_icon"
        app:layout_constraintTop_toTopOf="@id/iv_icon"
        android:layout_marginStart="@dimen/horizontal_margin_8"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_222" />

    <TextView
        android:id="@+id/tv_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_icon"
        android:layout_marginStart="@dimen/horizontal_margin_8"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_999" />
    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginTop="@dimen/vertical_margin_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_icon"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="view_result,iv_warning,tv_warning" />

    <View
        android:id="@+id/view_result"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line2"/>
    <ImageView
        android:id="@+id/iv_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_result"
        app:layout_constraintBottom_toBottomOf="@id/view_result"
        app:layout_constraintStart_toStartOf="@id/view_result"
        android:layout_marginStart="@dimen/horizontal_margin_8"
        android:src="@drawable/warning"/>
    <TextView
        android:id="@+id/tv_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_result"
        app:layout_constraintBottom_toBottomOf="@id/view_result"
        app:layout_constraintStart_toEndOf="@id/iv_warning"
        android:layout_marginStart="@dimen/horizontal_margin_8"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_ff3e3d"
        android:text="@string/warning"/>
</androidx.constraintlayout.widget.ConstraintLayout>
