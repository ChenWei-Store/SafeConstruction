<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/horizontal_margin_8"
        android:layout_marginStart="@dimen/horizontal_margin_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin_4"
        app:layout_constraintTop_toTopOf="@id/iv"
        app:layout_constraintBottom_toBottomOf="@id/iv"
        app:layout_constraintStart_toEndOf="@id/iv"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_222"
        tools:text="施工升降机"/>
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin_8"
        android:layout_marginTop="@dimen/horizontal_margin_8"
        app:layout_constraintTop_toBottomOf="@id/iv"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_222"
        tools:text="合格"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_margin_8"
        android:layout_marginTop="@dimen/horizontal_margin_8"
        app:layout_constraintTop_toTopOf="@id/tv_result"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_222"
        tools:text="2023-11-29"/>
    <TextView
        android:id="@+id/tv_next_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin_8"
        android:layout_marginTop="@dimen/horizontal_margin_8"
        app:layout_constraintTop_toBottomOf="@id/tv_result"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_222"
        tools:text="下次检测: 2023-11-29"/>
</androidx.constraintlayout.widget.ConstraintLayout>
