<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view_fines_unit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/vertical_margin_8"
        android:background="@color/c_fff" />
    <TextView
        android:id="@+id/tv_type"
        app:layout_constraintBottom_toBottomOf="@id/view_fines_unit"
        app:layout_constraintStart_toStartOf="@id/view_fines_unit"
        app:layout_constraintTop_toTopOf="@id/view_fines_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin_12"
        android:text="处理类别"
        android:textColor="@color/c_555"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_price"
        app:layout_constraintEnd_toEndOf="@id/view_fines_unit"
        app:layout_constraintTop_toTopOf="@id/view_fines_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_margin_8"
        android:drawablePadding="@dimen/horizontal_margin_8"
        android:textColor="@color/c_555"
        android:textSize="@dimen/sp_14"
        android:text="金额"/>

    <TextView
        android:id="@+id/tv_desc"
        app:layout_constraintEnd_toEndOf="@id/view_fines_unit"
        app:layout_constraintBottom_toBottomOf="@id/view_fines_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_margin_8"
        android:drawablePadding="@dimen/horizontal_margin_8"
        android:textColor="@color/c_555"
        android:textSize="@dimen/sp_14"
        android:text="说明"/>


</androidx.constraintlayout.widget.ConstraintLayout>
