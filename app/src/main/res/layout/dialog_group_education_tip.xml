<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin_24"
        android:layout_marginStart="@dimen/horizontal_margin_16"
        android:layout_marginEnd="@dimen/horizontal_margin_16"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/c_222"
        android:text="要求" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/vertical_margin_16"
        android:layout_marginStart="@dimen/horizontal_margin_16"
        android:layout_marginEnd="@dimen/horizontal_margin_16"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_222"
        android:text="@string/group_education_tip"/>
    <com.shuangning.safeconstruction.base.widget.DrawableTextView
        android:id="@+id/tv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下次不再提醒"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/c_999"
        android:drawableLeft="@drawable/not_select"
        android:drawablePadding="@dimen/horizontal_margin_4"
        android:layout_marginTop="@dimen/vertical_margin_16"
        android:layout_marginStart="@dimen/horizontal_margin_16"/>

    <Button
        android:id="@+id/btn_know"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/horizontal_margin_16"
        android:layout_marginEnd="@dimen/horizontal_margin_16"
        android:layout_marginTop="@dimen/vertical_margin_16"
        android:layout_marginBottom="@dimen/vertical_margin_24"
        android:background="@drawable/common_16_main_color_bg"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/c_fff"
        android:text="我知道了"/>
</LinearLayout>